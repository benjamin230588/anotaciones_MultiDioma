@model Anotaciones.ViewModel.ModelUsuario

@{
    ViewBag.Title = "Registro";
}

<h2>Registro</h2>

<form id="form_material" action="@Url.Action("Registro", "Anotaciones")" method="post" autocomplete="off">


    <div class="form-row">
        <div class="col-md-4">
            <div class="form-group">

                @Html.LabelFor(u => u.Username)
                @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Pasword)
                @Html.TextBoxFor(u => u.Pasword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Pasword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Telefono)
                @Html.TextBoxFor(u => u.Telefono, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="form-row">
        <div class="col-md-4">
            <div class="form-group">

                @Html.LabelFor(u => u.Nombre)
                @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Apellido)
                @Html.TextBoxFor(u => u.Apellido, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(u => u.Correo)
                @Html.TextBoxFor(u => u.Correo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-1">
            <div class="form-group">
                @Html.LabelFor(u => u.Idperfilcab)
                @Html.TextBoxFor(u => u.Idperfilcab, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Idperfilcab, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>


    <br>
    <br>
    <div class="text-left">
        <button id="btngrabar" type="submit" class="btn btn-primary btn-lg">Grabar</button>
        <a href="@Url.Action("Index","Materiales")" class="btn btn-secondary btn-lg">Regresar</a>
    </div>

    <br />
    <br />

</form>
